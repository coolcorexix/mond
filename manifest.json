{
  "name": "Open Settings",
  "version": "1.0",
  "description": "Opens the Chrome settings page when the browser is opened.",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  "permissions": ["tabs",  "activeTab"],
  "run_at": "startup",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}